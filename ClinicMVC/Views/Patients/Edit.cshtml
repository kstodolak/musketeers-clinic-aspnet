@model Clinic.Entities.Models.Patient

@{
    ViewBag.Title = "Edytuj swoje dane";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj swoje dane</h2>


@using (Html.BeginForm())
