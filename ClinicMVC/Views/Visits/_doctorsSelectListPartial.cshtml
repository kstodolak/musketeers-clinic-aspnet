@model IEnumerable<Clinic.Entities.Models.Doctor>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsultingRoom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialization.Name)
        </th>
        <th>
            Akcje
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsultingRoom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization.Name)
            </td>
            <td>
                @Html.ActionLink("Umów wizytę", "SignUp", new { doctorId = item.Id }, new { @class="btn btn-primary" })
            </td>
        </tr>
    }

</table>